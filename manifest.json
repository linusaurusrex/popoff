{
	"manifest_version": 3,
	"name": "Pop Off",
	"description": "Make popups open as tabs instead of windows.",
	"version": "0.5.1",
	"content_scripts": [{
		"all_frames": true,
		"js": ["scripts/open.js"],
		"matches": ["<all_urls>"],
		"match_origin_as_fallback": true,
		"run_at": "document_start",
		"world": "MAIN"
	}],
	"web_accessible_resources": [{
		"matches": ["<all_urls>"],
		"resources": ["scripts/open.js"],
		"use_dynamic_url": true
	}],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{325021c2-3544-4bdc-b42c-fab2147b9f5a}",
			"strict_min_version": "109.0"
		}
	},
	"host_permission": ["<all_urls>"]
}
